<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NouaniActivity">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Nouani Sanches"
        android:layout_gravity="center_horizontal"
        android:textSize="24dp"
        android:textColor="#8d3a62"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="RA:19351"
        android:layout_gravity="center_horizontal"
        android:textSize="24dp"
        android:textColor="#8d3a62"/>

    <ImageView
        android:id="@+id/image_view_monitor"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"/>



    <TableLayout
        android:adjustViewBounds="true"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:stretchColumns="0,1,2"
        >



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#000000"

            >

            <TextView
                android:layout_width="61dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background="#ffc1c1"
                android:gravity="center"
                android:text=" Horário "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:background="#ffc1c1"
                android:gravity="center"
                android:text="Laboratório "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />


        </TableRow>

        <TableRow
            android:background="#000000"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" 16:35 - 17:25"
                android:layout_margin="1dp"
                android:layout_column="0"
                android:background="#ffe4e1"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" LAPA"
                android:layout_margin="1dp"
                android:layout_column="1"
                android:background="#ffe4e1"
                android:gravity="center"
                />


        </TableRow>



        <TableRow
            android:background="#000000"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" 17:25 - 18:15"
                android:layout_margin="1dp"
                android:layout_column="0"
                android:background="#ffe4e1"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" LAPA"
                android:layout_margin="1dp"
                android:layout_column="1"
                android:background="#ffe4e1"
                android:gravity="center"
                />

        </TableRow>

    </TableLayout>

</LinearLayout>